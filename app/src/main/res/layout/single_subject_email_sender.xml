<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/subjectTextView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="@string/ask_for_new_func"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleSubEMailSenderTv4"
        tools:text="Prośba o nową funkcjonalność" />

    <TextView
        android:id="@+id/singleSubEMailSenderTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="@string/send_message"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/singleSubEMailSenderTv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="@string/to"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleSubEMailSenderTv" />

    <TextView
        android:id="@+id/singleSubEMailSenderTv3"
        android:layout_width="320dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:fontFamily="serif"
        android:text="joasia42@interia.eu"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleSubEMailSenderTv2"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/singleSubEMailSenderB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:scrollIndicators="right"
        android:scrollbars="vertical"
        android:text="@string/send"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/singleSubSenderEt"
        app:layout_constraintTop_toBottomOf="@+id/singleSubSenderEt"
        tools:ignore="UnusedAttribute"
        app:layout_constraintLeft_toLeftOf="@+id/singleSubSenderEt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/singleSubSenderEt"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="@string/your_message"
        android:inputType="textMultiLine"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/subjectTextView18" />


    <TextView
        android:id="@+id/singleSubEMailSenderTv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="@string/subject"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleSubEMailSenderTv3" />

</android.support.constraint.ConstraintLayout>