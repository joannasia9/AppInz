<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="titlesColor">@color/colorWhite</item>
        <item name="editTextFieldColor">@color/colorWhite</item>
        <item name ="contentTextColor">@color/classicContentColor</item>
        <item name="subContentTextColor">@color/colorAccent</item>
        <item name="backgroundColor">@color/classicBackgroundColor</item>
        <item name="buttonTextColor">@color/classicBackgroundColor</item>
        <item name="editTextFieldTextColor">@color/classicBackgroundColor</item>

        <item name="buttonStyle">@style/ClassicButtonStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RaspberryTheme">
        <item name="colorPrimary">@color/colorRaspberryPrimary</item>
        <item name="colorPrimaryDark">@color/colorRaspberryPrimaryDark</item>
        <item name="colorAccent">@color/colorRaspberryAccent</item>

        <item name="titlesColor">@color/colorWhite</item>
        <item name="editTextFieldColor">@color/colorWhite</item>
        <item name ="contentTextColor">@color/raspberryContentTextColor</item>
        <item name="subContentTextColor">@color/colorRaspberryAccent</item>
        <item name="backgroundColor">@color/classicBackgroundColor</item>
        <item name="buttonTextColor">@color/classicBackgroundColor</item>
        <item name="editTextFieldTextColor">@color/classicBackgroundColor</item>

        <item name="buttonStyle">@style/RaspberryButtonStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StrawberryTheme">
        <item name="colorPrimary">@color/colorStrawberryPrimary</item>
        <item name="colorPrimaryDark">@color/colorStrawberryPrimaryDark</item>
        <item name="colorAccent">@color/colorStrawberryAccent</item>

        <item name="titlesColor">@color/colorWhite</item>
        <item name="editTextFieldColor">@color/colorWhite</item>
        <item name ="contentTextColor">@color/strawberryContentTextColor</item>
        <item name="subContentTextColor">@color/colorStrawberryAccent</item>
        <item name="backgroundColor">@color/classicBackgroundColor</item>
        <item name="buttonTextColor">@color/classicBackgroundColor</item>
        <item name="editTextFieldTextColor">@color/classicBackgroundColor</item>

        <item name="buttonStyle">@style/StrawberryButtonStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppleTheme" >
        <item name="colorPrimary">@color/colorApplePrimary</item>
        <item name="colorPrimaryDark">@color/colorApplePrimaryDark</item>
        <item name="colorAccent">@color/colorAppleAccent</item>

        <item name="backgroundColor">@color/classicBackgroundColor</item>
        <item name="titlesColor">@color/colorWhite</item>
        <item name="editTextFieldColor">@color/colorWhite</item>

        <item name ="contentTextColor">@color/appleContentTextColor</item>
        <item name="subContentTextColor">@color/colorAppleAccent</item>

        <item name="buttonTextColor">@color/classicBackgroundColor</item>
        <item name="editTextFieldTextColor">@color/classicBackgroundColor</item>

        <item name="buttonStyle">@style/AppleButtonStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OrangeTheme" >
        <item name="colorPrimary">@color/colorOrangePrimary</item>
        <item name="colorPrimaryDark">@color/colorOrangePrimaryDark</item>
        <item name="colorAccent">@color/colorOrangeAccent</item>

        <item name="backgroundColor">@color/classicBackgroundColor</item>
        <item name="titlesColor">@color/colorWhite</item>
        <item name="editTextFieldColor">@color/colorWhite</item>

        <item name ="contentTextColor">@color/orangeContentTextColor</item>
        <item name="subContentTextColor">@color/colorOrangeAccent</item>

        <item name="buttonTextColor">@color/classicBackgroundColor</item>
        <item name="editTextFieldTextColor">@color/classicBackgroundColor</item>

        <item name="buttonStyle">@style/OrangeButtonStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OrangeButtonStyle">
        <item name="android:textColor">?android:attr/colorPrimaryDark</item>
        <item name="android:background">@drawable/orange_gradient</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="AppleButtonStyle">
        <item name="android:textColor">?android:attr/colorPrimaryDark</item>
        <item name="android:background">@drawable/apple_gradient</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="ClassicButtonStyle">
        <item name="android:textColor">?android:attr/colorPrimaryDark</item>
        <item name="android:background">@drawable/classic_gradient</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="RaspberryButtonStyle">
        <item name="android:textColor">?android:attr/colorPrimaryDark</item>
        <item name="android:background">@drawable/raspberry_gradient</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="StrawberryButtonStyle">
        <item name="android:textColor">?android:attr/colorPrimaryDark</item>
        <item name="android:background">@drawable/strawberry_gradient</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
